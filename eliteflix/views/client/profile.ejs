<% layout('layout') %>

<div class="max-w-5xl mx-auto mt-8 space-y-6">
  <!-- Encabezado -->
  <div class="bg-slate-800/70 p-6 rounded-xl border border-slate-700">
    <h1 class="text-2xl font-bold text-white mb-2">Mi perfil</h1>
    <div class="grid md:grid-cols-2 gap-4 text-slate-200">
      <div>
        <p><span class="text-slate-400">Nombre:</span> <%= client.first_name || '' %> <%= client.last_name || '' %></p>
        <p><span class="text-slate-400">Pa√≠s:</span> <%= client.country || '‚Äî' %></p>
      </div>
      <div>
        <p><span class="text-slate-400">Correo:</span> <%= client.email %></p>
        <p><span class="text-slate-400">Saldo:</span> <%= formatMoney(client.balance_cents) %></p>
      </div>
    </div>
    <form class="mt-4" method="POST" action="/salir">
      <button class="px-4 py-2 bg-slate-700 hover:bg-slate-600 rounded-md text-slate-100 text-sm">Cerrar sesi√≥n</button>
    </form>
  </div>

  <!-- Pr√≥ximas renovaciones / Compras activas -->
  <div class="bg-slate-800/70 p-6 rounded-xl border border-slate-700">
    <div class="flex items-center justify-between mb-3">
      <h2 class="text-xl font-semibold text-white">Suscripciones</h2>
      <span class="text-sm text-slate-400">Historial y pr√≥ximas renovaciones</span>
    </div>

    <% if (!orders || orders.length === 0) { %>
      <p class="text-slate-300">No tienes suscripciones activas.</p>
    <% } else { %>
      <div class="overflow-x-auto">
        <table class="w-full text-sm text-left text-slate-300">
          <thead class="text-slate-400 border-b border-slate-700">
            <tr>
              <th class="py-2">Plataforma</th>
              <th class="py-2">Inicio</th>
              <th class="py-2">Vencimiento</th>
              <th class="py-2">Estado</th>
            </tr>
          </thead>
          <tbody>
            <% orders.forEach(o => { 
              const estado = o.end_date ? (new Date(o.end_date) >= new Date() ? '‚úÖ Activa' : 'üî¥ Vencida') : (o.status || '‚Äî');
            %>
              <tr class="border-b border-slate-800">
                <td class="py-2"><%= o.product_name %></td>
                <td class="py-2"><%= o.start_date || '‚Äî' %></td>
                <td class="py-2"><%= o.end_date || '‚Äî' %></td>
                <td class="py-2"><%= estado %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>

  <!-- Soporte -->
  <div class="bg-slate-800/70 p-6 rounded-xl border border-slate-700">
    <h2 class="text-xl font-semibold text-white mb-2">Soporte</h2>
    <p class="text-slate-300 mb-4">¬øTienes alg√∫n problema o duda? Env√≠anos un mensaje.</p>
    <form method="POST" action="/soporte" class="grid md:grid-cols-2 gap-4">
      <div class="md:col-span-2">
        <label class="block text-sm text-slate-300 mb-1">Asunto</label>
        <input name="subject" class="w-full rounded-md bg-slate-900/60 border border-slate-700 p-2 text-white" required>
      </div>
      <div class="md:col-span-2">
        <label class="block text-sm text-slate-300 mb-1">Mensaje</label>
        <textarea name="message" rows="4" class="w-full rounded-md bg-slate-900/60 border border-slate-700 p-2 text-white" required></textarea>
      </div>
      <div class="md:col-span-2">
        <button class="px-4 py-2 bg-red-600 hover:bg-red-700 rounded-md text-white font-semibold">Contactar soporte</button>
      </div>
    </form>
  </div>
</div>
