<% layout('layout') %>
<div class="max-w-7xl mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">Cat√°logo</h1>
  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-5 lg:grid-cols-6 gap-4">
    <% products.forEach(p => { %>
      <div class="group relative overflow-hidden rounded-lg bg-white/5 border border-white/10">
        <img src="<%= p.logo_url %>" alt="<%= p.name %>" class="w-full h-40 object-contain p-4 transition-transform duration-300 group-hover:scale-105">
        <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/80 to-transparent p-2 text-xs">
          <span class="opacity-90"><%= p.name %></span>
        </div>
      </div>
    <% }) %>
  </div>
</div>
