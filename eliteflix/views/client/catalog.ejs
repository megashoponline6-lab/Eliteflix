<% layout('layout') %>

<div class="max-w-7xl mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6 text-white">Cat√°logo</h1>

  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-6">
    <% products.forEach(p => { %>
      <div class="group relative overflow-hidden rounded-xl bg-slate-800 border border-slate-700 shadow hover:shadow-lg transition">
        <img src="<%= p.logo_url %>" alt="<%= p.name %>" class="w-full h-32 object-contain bg-slate-900">
        <div class="absolute inset-x-0 bottom-0 bg-black/60 text-white text-center py-2 text-sm">
          <span class="block font-semibold"><%= p.name %></span>
          <span class="opacity-90"><%= formatMoney(p.price_cents) %> / <%= p.period %></span>
        </div>
      </div>
    <% }) %>
  </div>
</div>
