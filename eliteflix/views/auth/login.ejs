<% layout('layout') %>
<div class="max-w-md mx-auto mt-10 bg-slate-800/70 p-6 rounded-xl shadow">
  <h1 class="text-2xl font-bold text-white mb-4">Iniciar sesión</h1>
  <form method="POST" action="/inicio" class="space-y-4">
    <div>
      <label class="block text-sm text-slate-300 mb-1">Correo</label>
      <input type="email" name="email" class="w-full rounded-md bg-slate-900/60 border border-slate-700 p-2 text-white" required>
    </div>
    <div>
      <label class="block text-sm text-slate-300 mb-1">Contraseña</label>
      <input type="password" name="password" class="w-full rounded-md bg-slate-900/60 border border-slate-700 p-2 text-white" required>
    </div>
    <button class="w-full bg-red-600 hover:bg-red-700 text-white font-semibold py-2 rounded-md">
      Entrar
    </button>
  </form>

  <p class="text-slate-400 text-sm mt-4">
    ¿No tienes cuenta?
    <a class="text-red-400 hover:underline" href="/registro">Regístrate</a>
  </p>
</div>
